@model Task4Linkerp.ViewModel.Borrowed.ReturnedViewModel
@inject IViewLocalizer localizer


@if (ViewBag.check == 0)
{
    ViewData["Title"] = "Returned";
    SelectList Borrowers = new SelectList(ViewBag.borrowers, "Id", "NameEN");
    SelectList Books = new SelectList(ViewBag.books, "Id", "NameEN");

<div style="text-align:right" class="mb-2">
    <a asp-action="Index" class="btn"><i class="fa-solid fa-angles-left"></i>@localizer["Back to List"]</a>
</div>
<div class="row justify-content-center">
    <div class="card col-lg-6  col-md-9 col-sm-12 px-2">
        <div class="my-2" style="text-align: center;">
            <h4 style="color:#FAB005" class="my-4 ">@localizer["Create New Borrowing"]</h4>
        </div>
        <form asp-action="Returned" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <div class="row my-3">
                    <div class=" text-md-center col-md-4">
                        <label asp-for="PIN" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="PIN" class="form-control" />
                        <span asp-validation-for="PIN" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row my-3">
                    <div class="text-md-center col-md-4">
                        <label asp-for="BorrowerId" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="BorrowerId" class="form-control" asp-items="Borrowers">
                        </select>
                        <span asp-validation-for="BorrowerId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row my-3">
                    <div class="text-md-center col-md-4">
                        <label asp-for="BookId" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="BookId" class="form-control" asp-items="Books">
                        </select>
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                </div>
            </div>
           <div style="text-align:center" > 
                <button class="mb-2" style="width:150px;"  type="submit">@localizer["Create"]</button>
            </div>
        </form>
    </div>
</div>


}
else if (ViewBag.check == 1)
{
    <div class="container">
        <div class=" row justify-content-center my-2 ">
            <div class="card col-lg-4 col-md-6 col-sm-9 py-3 mt-2 ">

                    <div class="alert alert-success" role="alert">
                        <p>
                        @localizer["This PIN Not Successfully"]
                        </p>
                    </div>
                    <div style="text-align:center" class="mb-2">
                        <a asp-action="Index" class="btn"><i class="fa-solid fa-angles-left"></i>@localizer["Back to List"]</a>
                    </div>
            </div>
        </div>
    </div>
    
}
else if (ViewBag.check == 2)
{
    <div class="container">
        <div class=" row justify-content-center my-2 ">
            <div class="card col-lg-4 col-md-6 col-sm-9 py-3 mt-2 ">

                    <div class="alert alert-success" role="alert">
                        <p>
                            @localizer["The Returned Book successfully"]
                        </p>
                    </div>
                    <div style="text-align:center" class="mb-2">
                        <a asp-action="Index" class="btn"><i class="fa-solid fa-angles-left"></i>@localizer["Back to List"]</a>
                    </div>
            </div>
        </div>
    </div>
    
}
else if (ViewBag.check == 3)
{
    <div class="container">
        <div class=" row justify-content-center my-2 ">
            <div class="card col-lg-4 col-md-6 col-sm-9 py-3 mt-2 ">
                <div class="alert alert-success" role="alert">
                    <p>
                        @localizer["The Book Not Borrwing"]
                    </p>
                </div>
                <div style="text-align:center" class="mb-2">
                    <a asp-action="Index" class="btn"><i class="fa-solid fa-angles-left"></i>@localizer["Back to List"]</a>
                </div>
            </div>
        </div>
    </div>
   
}
<style>
    body {
        background-color: #F0F1F3;
    }

    .card {
        background-color: white;
        border-radius: 25px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, .5);
    }

    h6,
    h1 {
        color: #FAB005;
        font-family: cursive;
    }

    label,
    h4,
    p {
        font-family: cursive;
        color: #183153;
    }

    input {
        border: 10px #183153;
    }

    .icon {
        position: absolute;
        top: calc(43%);
        left: 1.8rem;
    }

    .iconn {
        position: absolute;
        top: calc(58%);
        left: 1.8rem;
    }

    .btn {
        border-radius: 10px;
        background-color: #63E6BE;
        color: #183153;
        height: 50px;
        border-top: 2px solid #183153;
        border-left: 2px solid #183153;
        border-right: 2px solid #183153;
        border-bottom: 8px solid #183153;
        font-family: cursive;
        font-weight: bold;
        font-size: 18px;
    }

        .btn:hover {
            border-radius: 10px;
            background-color: #0CA678;
            color: #183153;
            height: 50px;
            border-top: 2px solid #183153;
            border-left: 2px solid #183153;
            border-right: 2px solid #183153;
            border-bottom: 8px solid #183153;
            font-family: cursive;
            font-weight: bold;
            font-size: 18px;
        }


    button {
        border-radius: 10px;
        background-color: #FFD43B;
        color: #183153;
        height: 50px;
        border-top: 2px solid #183153;
        border-left: 2px solid #183153;
        border-right: 2px solid #183153;
        border-bottom: 8px solid #183153;
        font-family: cursive;
        font-weight: bold;
        font-size: 18px;
    }

        button:hover {
            background-color: #FAB005;
        }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
